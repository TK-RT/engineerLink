<div class="container">
	<div class="row">
		<div class=col-4>
			<%= form_with model: @article, url: users_articles_path, local: true do |f| %>
			<%= f.label :タイトル %><br />
			<%= f.text_field :article_title %><br />

			<%= f.label :投稿内容 %><br />
			<%= f.text_area :article_body %>

			<%= f.submit "投稿" %>
			<% end %>		
		</div>
	</div>
</div>
	