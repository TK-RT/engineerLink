<div class="container">

  <div class="row">
    <div class="col">
      <%= render "users/top/list" %>
    </div>
  </div>
    
  <nav class="col mt-5">
    <div class="col">
      <div class="nav nav-tabs" id="nav-tab" role="tablist">
        <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">投稿一覧</a>
        <div class="ml-auto"><%= link_to "投稿する", new_users_article_path, class: "btn btn-success" %></div>
      </div>
    </div>
  </nav>


  <div class="col tab-content mt-5" id="nav-tabContent">
    <div class="tab-pane active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
      <div class="col">
        <table class="table">
          <tbody>
            <% @articles.each_with_index do |article, i| %>
              <% if i==0 %>
                <tr>
                  <td class="border-top-0 border-bottom  align-middle text-center" width="150"><%= attachment_image_tag article.user, :profile_image, format: "jpg", size: "50x50", fallback: "no_image.jpg" %></td>
                  <td class="border-top-0 border-bottom  align-middle" width="500"><span class="d-inline-block text-truncate" style="max-width: 500px;"><%= link_to article.article_title, users_article_path(article) %></span></td>
                  <td class="border-top-0 border-bottom  align-middle" width="150">コメント数：<%= article.post_comments.count %></td>
                  <td class="border-top-0 border-bottom  align-middle" width="150"><i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>いいね数：<%= article.favorites.count %></td>
                </tr>
              <% else %>
                <tr>
                  <td class="border-top-0 border-bottom  align-middle text-center" width="150"><%= attachment_image_tag article.user, :profile_image, format: "jpg", size: "50x50", fallback: "no_image.jpg" %></td>
                  <td class="border-top-0 border-bottom  align-middle" width="500"><span class="d-inline-block text-truncate" style="max-width: 500px;"><%= link_to article.article_title, users_article_path(article) %></span></td>
                  <td class="border-top-0 border-bottom  align-middle" width="150">コメント数：<%= article.post_comments.count %></td>
                  <td class="border-top-0 border-bottom  align-middle" width="150"><i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>いいね数：<%= article.favorites.count %></td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col-4 offset-4">
        <%= paginate @articles %>
    </div>
  </div>
</div>

