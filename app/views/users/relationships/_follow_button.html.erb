<% unless current_user == user %>
	<% if current_user.following?(user) %>
    	<%= link_to "フォローを外す", users_relationship_path(user), method: :delete, remote:true, class: "btn btn-danger" %>
	<% else %>
    	<%= link_to "フォロー", users_relationships_path(id: user), method: :post, remote:true, class: "btn btn-success" %>
	<% end %>
<% end %>