<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォローを外す", users_relationship_path(user.id), method: :delete, class: "btn btn-danger" %>
  <% else %>
    <%= link_to "フォロー", users_relationships_path(id: user.id), method: :post, class: "btn btn-success" %>
  <% end %>
<% end %>