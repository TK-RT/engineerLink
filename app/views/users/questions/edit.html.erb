<%= form_with model: @question, url: users_question_path(@question), local: true do |f| %>
	<div class="container">

		<div class="row">
			<div class="col-4 offset-4">
				<%= f.label :タイトル, class: "h4" %><br />
				<%= f.text_field :question_title, class: "form-control" %>
			</div>
		</div>

		<div class="row mt-3">
			<div class="col-4 offset-4" style="height:300px;">
				<%= f.label :質問内容, class: "h4" %><br />
				<%= f.text_area :question_body, class: "form-control h-100" %>
			</div>
		</div>

		<div class="row mt-5">
			<div class="col-4 offset-4">
				<%= f.label :言語ジャンル, class: "h4" %><br />
				<%= f.collection_select :programming_language_id, ProgrammingLanguage.all, :id, :programming_language, {prompt: '選択してください'}, class: "form-control mt-1" %>
			</div>
		</div>

		<div class="row mt-5">
			<div class="col-3 m-auto">
				<%= f.submit "編集内容を保存する", class: "btn btn-success btn-block mt-5" %>
			</div>
		</div>

	</div>
<% end %>