<%= form_with model: @question, url: users_questions_path, local: true do |f| %>
	<div class="container">
		<%= render 'layouts/error_messages', model: f.object %>
		<div class="row mt-5">
			<div class="col-4 offset-4">
				<%= f.label :タイトル, class: "h4" %><br />
				<%= f.text_field :question_title, class: "form-control" %>
			</div>
		</div>

		<div class="row mt-3" style="height: 300px;">
			<div class="col-4 offset-4">
				<%= f.label :質問内容, class: "h4" %><br />
				<%= f.text_area :question_body, class: "form-control h-100" %>
			</div>
		</div>

		<div class="row mt-5">
			<div class="col-2  offset-5">
				<%= f.submit "質問する", class: "btn btn-success btn-block mt-4" %>
			</div>
		</div>

	</div>
<% end %>