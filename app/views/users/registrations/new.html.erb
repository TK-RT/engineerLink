
<div class="container">

  <div class="col-2 offset-1 m-5">
    <h4 class="bg-success">新規会員登録</h2>
  </div>
  
  
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

  <div class="row m-2">
    <div class="col-3"><span class="align-middle">名前</span></div>
    <div class="col-3"><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %></div>
    <div class="col-3"><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %></div>
  </div>

  <div class="row m-2">
    <div class="col-3"><span class="align-middle">フリガナ</span></div>
    <div class="col-3"><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "form-control" %></div>
    <div class="col-3"><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "form-control" %></div>
  </div>

  <div class="row m-2">
    <div class="col-3"><span class="align-middle">メールアドレス</span></div>
    <div class="col-3"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></div>
  </div>

  <div class="row m-2">
    <div class="col-3"><span class="align-middle">生年月日</span></div>
    <div class="col-3"><%= raw sprintf(f.date_select(:birthday, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1), date_separator: '%s'),'年 ','月 ') + '日' %></div>
  </div>

  <div class="row m-2">
    <div class="col-3"><span class="align-middle">性別</span></div>
    <div class="col-3"><%= f.radio_button :gender, :男性 %>  <%= f.label :男 %>  <%= f.radio_button :gender, :女性 %>  <%= f.label :女 %></div>
  </div>

  <div class="row m-2">
    <div class="col-3"><span class="align-middle">郵便番号(ハイフンなし)</span></div>
    <div class="col-3"><%= f.text_field :postcode, autofocus: true, autocomplete: "postcode", class: "form-control" %></div>
  </div>

  <div class="row m-2">
    <div class="col-3"><span class="align-middle">住所</span></div>
    <div class="col-2"><%= f.select :prefecture, User.prefectures, {prompt: '選択してください'}, class: "custom-select" %></div>
    <div class="col-4"><%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control" %></div>
  </div>

  <div class="row m-2">
    <div class="col-3"><span class="align-middle">電話番号(ハイフンなし)</span></div>
    <div class="col-3"><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "form-control" %></div>
  </div>

  <div class="row m-2">
    <div class="col-3">
      <%= f.label :パスワード, class: "align-middle" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %>
    </div>
    <div class="col-3"><%= f.password_field :password, autocomplete: "new-password", class: "form-control" %></div>
  </div>

  <div class="row m-2">
    <div class="col-3"><span class="align-middle">パスワード(確認用)</span></div>
    <div class="col-3"><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %></div>
  </div>

  <div class="row m-5">
    <div class="col-3 offset-3">
      <%= f.submit "新規登録", class: "btn btn-success btn-block" %>
    </div>
  </div>
  
  <% end %>
</div>