<%= form_with model:[@company,@evaluation], url:next_users_company_evaluations_path, method: :get, local: true do |f| %>
<div class="container">
	<div class="row">
		<div class="col-6 offset-3">
			<table class="table table-bordered">
				<tr>
					<th class="table-primary text-center h6 align-middle">労働時間時間の満足度</th>
					<td class="text-center" id="star"><%= f.hidden_field :working_time %></td>
				</tr>
				<tr>
					<th class="table-primary text-center h6 align-middle">仕事のやりがい</th>
					<td class="text-center" id="star1"><%= f.hidden_field :rewarding %></td>
				</tr>
				<tr>
					<th class="table-primary text-center h6 align-middle">社員同士のコミュニケーション</th>
					<td class="text-center" id="star2"><%= f.hidden_field :communication %></td>
				</tr>
				<tr>
					<th class="table-primary text-center h6 align-middle">休日数の満足度</th>
					<td class="text-center" id="star3"><%= f.hidden_field :holiday %></td>
				</tr>
				<tr>
					<th class="table-primary text-center h6 align-middle">給与の満足度</th>
					<td class="text-center" id="star4"><%= f.hidden_field :salary %></td>
				</tr>
				<tr>
					<th class="table-primary text-center h6 align-middle">社員の成長環境</th>
					<td class="text-center" id="star5"><%= f.hidden_field :growth_environment %></td>
				</tr>
				<script>
				$('#star').raty({
					size: 36,
					starOff: '<%= asset_path("star-off.png") %>',
					starOn: '<%= asset_path("star-on.png") %>',
					starHalf: '<%= asset_path("star-half.png") %>',
					half: true,
					scoreName: 'evaluation[working_time]'
				});
				</script>
				<script>
					$('#star1').raty({
						size: 36,
						starOff: '<%= asset_path("star-off.png") %>',
						starOn: '<%= asset_path("star-on.png") %>',
						starHalf: '<%= asset_path("star-half.png") %>',
						half: true,
						scoreName: 'evaluation[rewarding]'
					});
				</script>
				<script>
					$('#star2').raty({
						size: 36,
						starOff: '<%= asset_path("star-off.png") %>',
						starOn: '<%= asset_path("star-on.png") %>',
						starHalf: '<%= asset_path("star-half.png") %>',
						half: true,
						scoreName: 'evaluation[communication]'
					});
				</script>
				<script>
					$('#star3').raty({
						size: 36,
						starOff: '<%= asset_path("star-off.png") %>',
						starOn: '<%= asset_path("star-on.png") %>',
						starHalf: '<%= asset_path("star-half.png") %>',
						half: true,
						scoreName: 'evaluation[holiday]'
					});
				</script>
				<script>
					$('#star4').raty({
						size: 36,
						starOff: '<%= asset_path("star-off.png") %>',
						starOn: '<%= asset_path("star-on.png") %>',
						starHalf: '<%= asset_path("star-half.png") %>',
						half: true,
						scoreName: 'evaluation[salary]'
					});
				</script>
				<script>
					$('#star5').raty({
						size: 36,
						starOff: '<%= asset_path("star-off.png") %>',
						starOn: '<%= asset_path("star-on.png") %>',
						starHalf: '<%= asset_path("star-half.png") %>',
						half: true,
						scoreName: 'evaluation[growth_environment]'
					});
				</script>
			</table>
						
		</div>
	</div>
	<div class="row mt-5">
		<div class="col-2 offset-5">
			<%= f.submit "次のページ", class: "btn btn-success btn-block" %>
		</div>
	</div>
</div>
<% end %>