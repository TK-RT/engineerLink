<% if controller.controller_name == "questions" || controller.action_name == "question_favorite_create" || controller.action_name == "question_favorite_destroy" %>
	<% if question.favorited_by?(current_user) %>
		<%= link_to users_question_favorites_path(question), method: :delete, remote: true do %>
			<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
		<% end %>
		いいね：<%= question.favorites.count %>
	<% else %>
		<%= link_to users_question_favorites_path(question), method: :post, remote: true do %>
			<i class="fa fa-heart-o" aria-hidden="true"></i>
		<% end %>
		いいね：<%= question.favorites.count %>
	<% end %>
<% end %>

