<div class="container">

	<div class="row">
		<div class="col-4 offset-3 h4">言語ジャンル編集</div>
	</div>

	<%= form_with model: @programming_language, url: admins_programming_language_path(@programming_language), local: true do |f| %>
		<div class="row mt-5">
			<div class="col-3 offset-3"><%= f.text_field :programming_language, class: "form-control" %></div>
			<div class="col-1"><%= f.radio_button :is_enabled, :有効 %> <%= f.label :有効 %></div>
			<div class="col-1"><%= f.radio_button :is_enabled, :無効 %> <%= f.label :無効 %></div>
			<div class="col-2"><%= f.submit "変更を保存する", class: "btn btn-primary btn-block" %></div>
		</div>
	<% end %>

</div>