<div class="container">
	<div class="row">
		<div class="col">
			<%= render "admins/list" %>
		</div>
	</div>

	<div class="row mt-5">
		<div class="col">
			
			<form class="form-inline">
  				<h2>企業一覧</h2>
  				<%= search_form_for @q, url: admins_companies_path do |f| %>
	 				<div class="form-group mx-sm-3 mb-2">
	   					<%= f.search_field :company_name_cont, class: "form-control" %>
	    				<%= f.submit "検索", class: "btn btn-primary ml-2" %>
	  				</div>
	  			<% end %>
			</form>

			<table class="table">
				<thead class="thead-light">
					<tr>
						<th>企業ID</th>
						<th>企業名</th>
						<th>所在地</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<% @companies.each do |company| %>
						<tr class="border-bottom">
							<td class="align-middle"><span class="d-inline-block text-truncate align-middle" style="max-width: 300px;"><%= company.id %></span></td>
							<td class="align-middle"><%= company.company_name %></td>
							<td class="align-middle"><%= company.main_office %></td>
							<td class="align-middle"><%= link_to "クチコミ一覧", admins_company_evaluations_path(company) %></td>
							<td class="align-middle"><%= link_to "企業情報編集", edit_admins_company_path(company), class: "btn btn-success" %></td>
							<td class="align-middle"><%= link_to "削除", admins_company_path(company), method: :delete, data: {confirm: "削除しますか？"},class: "btn btn-danger" %></td>
						</tr>
					<% end %>
				</tbody>
			</table>

			<div class="col offset-4 mt-5">
				<%= paginate @companies %>
			</div>
		</div>
	</div>
</div>